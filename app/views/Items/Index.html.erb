
<h1>Party Items to Rent</h1>

<% @items.each do |item| %>
  <div>
    <%= image_tag(item.photo) if item.photo.attached? %>
    <h2><%= item.name %></h2>
    <p><%= item.description %></p>
    <p>Location: <%= item.location %></p>
    <p>Price: <%= item.price %></p>
  </div>
<% end %>

