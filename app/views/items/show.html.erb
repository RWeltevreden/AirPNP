<div class="container-fluid text-center mt-3">
  <div class="item-photo">
        <%= image_tag(@item.photo.url, width: 400, height: 300, crop: :fill) %>

    </div><br>
  <div>
    <h3><strong><%= @item.name %></strong></h3>
    <p><%= @item.description %></p>
    <p><%= @item.location %></p>
    <p><%= @item.price %></p>
  </div>

  <div>
    <%= text_field_tag :opening_date, nil, placeholder: 'Choose a date', data: { controller: "datepicker" } %>
    <button type="button" class="btn btn-light" id="bookButton">Book</button>
  </div>

</div>

