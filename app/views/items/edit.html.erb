<div class="container">

  <h2>Edit your item</h2>

  <%= simple_form_for(@item, html: { multipart: true }) do |f| %>
    <!-- [...] -->
    <%= f.input :name, as: :string %>
    <%= f.input :price, as: :integer %>
    <%= f.input :description, as: :string %>
    <%= f.input :location, as: :string %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
    <!-- [...] -->
  <% end %>
</div>
